<ivysettings>
	<property name="ivy.shared.default.root"             value="${ivy.default.ivy.user.dir}/shared" override="false"/>
	<property name="ivy.shared.default.ivy.pattern"      value="[organisation]/[module]/[revision]/[type]s/[artifact].[ext]" override="false"/>
	<property name="ivy.shared.default.artifact.pattern" value="[organisation]/[module]/[revision]/[type]s/[artifact].[ext]" override="false"/>
	<resolvers>
		<filesystem name="shared">
			<ivy pattern="${repository.dir}/shared/${ivy.shared.default.ivy.pattern}" />
			<artifact pattern="${repository.dir}/shared/${ivy.shared.default.artifact.pattern}" />
		</filesystem>
		<!--url name="shared"><! You can use  m2compatible="true" instead of specifying your own pattern >
			<artifact pattern="http://localhost:8666/artifactory/libs-snapshots-local/[organization]/[module]/[revision]/[artifact]-[revision].[ext]"/>
			<ivy pattern="http://localhost:8666/[organization]/[module]/[revision]/ivy-[revision].xml" />
		</url-->
	</resolvers>
</ivysettings>
