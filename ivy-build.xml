<?xml version="1.0"?>
<project name="ivy" default="publish" xmlns:ivy="antlib:org.apache.ivy.ant">
	<target name="publish">
		<ivy:resolve
						file="ivy.xml"
		/>
		<ivy:publish 
						artifactspattern="build/[artifact].[ext]" 
						resolver="shared"
						pubrevision="1.3" 
						validate="true"
						organisation="exedio"
						module="cope-util"
						revision="1.44" />
		<echo message="project ${ant.project.name} released with version ${version}" />
	</target>
</project>
