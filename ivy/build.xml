<?xml version="1.0"?>
<project name="ivy" default="copy">
	<import file="common.xml" />
	<target name="copy" depends="resolve">
		
		<move todir="artifacts">
			<globmapper from="*-jar.jar" to="*.jar" />
			<fileset dir="artifacts">
				<include name="*-jar.jar" />
			</fileset>
		</move>
		<move todir="artifacts">
			<globmapper from="*-dist.tar.gz" to="*.tar.gz" />
			<fileset dir="artifacts">
				<include name="*-dist.tar.gz" />
			</fileset>
		</move>
		
		<copy overwrite="true" file="artifacts/junit.jar" todir="../lib" />
		<copy overwrite="true" file="artifacts/easymock.jar" todir="../lib" />
		<copy overwrite="true" file="artifacts/cglib-nodep.jar" todir="../lib" />
	</target>
</project>
