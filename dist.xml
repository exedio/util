<?xml version="1.0"?>

<project name="cope util dist" default="dist" basedir=".">

	<property name="build.number" value="unlabeled" />
	
	<target name="dist">
		<delete dir="dist" />
		<mkdir  dir="dist" />
		<echo file="build-number.txt" message="${build.number}" />
		<echo file="svn-revision.txt" message="${svn.revision}" />
		<tar destfile="dist/exedio-cope-util-src-${build.number}.tar.gz"
				compression="gzip">
			<tarfileset file="${basedir}/build/build.number" />
			<tarfileset dir="${basedir}">
				<exclude name="getlib/**" />
				<exclude name="getlib.xml" />
				<exclude name="getlib.properties" />
				<exclude name="dist/**" />
			</tarfileset>
		</tar>
	</target>

</project>
